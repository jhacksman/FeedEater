{
  "name": "system",
  "version": "0.0.1",
  "namespace": "feedeater.system",
  "runtime": { "entry": "dist/runtime.js" },
  "queues": ["mod_system"],
  "jobs": [
    {
      "name": "ollamaDebug",
      "queue": "mod_system",
      "description": "Fetch Ollama tags and report models/health metrics."
    }
  ],
  "settings": [
    { "key": "jetstream_max_age_seconds", "type": "number", "default": 2592000 },
    { "key": "dashboard_bus_history_minutes", "type": "number", "default": 60 },
    { "key": "dashboard_bus_limit", "type": "number", "default": 200 },
    { "key": "dashboard_bus_filter_module", "type": "string", "default": "" },
    { "key": "dashboard_bus_filter_stream", "type": "string", "default": "" },
    { "key": "dashboard_bus_search", "type": "string", "default": "" },
    { "key": "dashboard_contexts_history_minutes", "type": "number", "default": 60 },
    { "key": "dashboard_contexts_limit", "type": "number", "default": 200 },
    { "key": "dashboard_contexts_filter_module", "type": "string", "default": "" },
    { "key": "dashboard_contexts_search", "type": "string", "default": "" },
    { "key": "ollama_base_url", "type": "string", "default": "" },
    { "key": "ollama_summary_model", "type": "string", "default": "llama3.1:8b" },
    { "key": "ollama_embed_model", "type": "string", "default": "llama3.1:8b" },
    { "key": "ollama_embed_dim", "type": "number", "default": 4096 },
    { "key": "context_top_k", "type": "number", "default": 20 },
    { "key": "dashboard_show_ids", "type": "boolean", "default": false }
  ],
  "cards": [
    { "id": "systemStatus", "title": "System" }
  ]
}


