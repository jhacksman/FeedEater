generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ArbitrumSwap {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  chain         String   @default("arbitrum")
  dex           String
  pool          String
  txHash        String
  block         BigInt
  timestampMs   BigInt
  token0Amount  String
  token1Amount  String
  usdValue      String
  sender        String
  isWhale       Boolean

  @@index([pool, timestampMs])
  @@index([isWhale])
  @@schema("mod_arbitrum_dex")
}

model GmxPosition {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  chain           String   @default("arbitrum")
  eventType       String
  txHash          String
  block           BigInt
  timestampMs     BigInt
  account         String
  market          String
  collateralToken String
  sizeInUsd       String
  sizeInTokens    String
  collateralAmount String
  isLong          Boolean
  isWhale         Boolean

  @@index([account, timestampMs])
  @@index([market, timestampMs])
  @@index([eventType])
  @@index([isWhale])
  @@schema("mod_arbitrum_dex")
}
