generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Setting {
  id        String   @id @default(uuid())
  module    String
  key       String
  isSecret  Boolean  @default(false)
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([module, key])
  @@index([module])
}


