# FeedEater Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Core Infrastructure
# =============================================================================

# PostgreSQL (pgvector)
POSTGRES_USER=feedeater
POSTGRES_PASSWORD=feedeater
POSTGRES_DB=feedeater
DATABASE_URL=postgresql://feedeater:feedeater@postgres:5432/feedeater

# NATS (JetStream)
NATS_URL=nats://nats:4222

# Security Keys
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
FEED_SETTINGS_KEY=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
FEED_INTERNAL_TOKEN=dev-internal-token

# =============================================================================
# OPTIONAL - Ollama AI Integration
# =============================================================================

# Ollama base URL (omit to disable AI features)
OLLAMA_BASE_URL=
# OLLAMA_BASE_URL=http://host.docker.internal:11434

# Ollama models
OLLAMA_SUMMARY_MODEL=llama3.1:8b
OLLAMA_EMBED_MODEL=llama3.1:8b
OLLAMA_EMBED_DIM=4096

# =============================================================================
# OPTIONAL - Financial Module API Keys
# =============================================================================

# Coinbase
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Kalshi (prediction markets)
# Public data works without keys; authenticated endpoints need both key + secret
KALSHI_API_KEY=
KALSHI_API_SECRET=

# Polymarket (prediction markets)
# Public data (markets, trades) works without a key
POLYMARKET_API_KEY=

# Uniswap (Ethereum WebSocket RPC)
# Default: ws://localhost:8546
# Use Infura/Alchemy for production: wss://mainnet.infura.io/ws/v3/YOUR_KEY
UNISWAP_RPC_URL=ws://localhost:8546

# Uniswap Base L2 (Base WebSocket RPC)
# Default: ws://localhost:8646
UNISWAP_BASE_RPC_URL=ws://192.168.0.134:8646

# Aerodrome Base L2 (Base WebSocket RPC)
# Default: ws://localhost:8646
# Aerodrome is a Solidly-fork AMM on Base with stable/volatile pool types
AERODROME_BASE_RPC_URL=ws://192.168.0.134:8646

# =============================================================================
# OPTIONAL - Service Configuration
# =============================================================================

# Proxy port (default: 666)
PROXY_PORT=666

# API base URL for worker (internal)
FEED_API_BASE_URL=http://api:4000

# Web UI API URL
NEXT_PUBLIC_API_URL=http://api:4000
